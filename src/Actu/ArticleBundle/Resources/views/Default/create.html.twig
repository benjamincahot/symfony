{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
<h2>Creation d'un article</h2>

{{ form_start(form)}}
{{ form_errors(form)}}

<div class="form-group row">
  {{ form_label(form.title, null, {
    'label_attr': {
      'class': 'col-sm-2 col-form-label'
    }
  }) }}
  <div class="col-sm-6">
    {{ form_widget(form.title, {
    'attr': {
      'class': 'form-control'
    }
    }) }}
  </div>
</div>

<div class="form-group row">
  {{ form_label(form.content, null, {
    'label_attr': {
      'class': 'col-sm-2 col-form-label'
    }
  }) }}
  <div class="col-sm-6">
    {{ form_widget(form.content, {
    'attr': {
      'class': 'form-control'
    }
    }) }}
  </div>
</div>

<button type="submit" class="form-group btn btn-success">Submit</button>
{{ form_rest(form)}}
{{ form_end(form)}}
</div>
{% endblock body %}
